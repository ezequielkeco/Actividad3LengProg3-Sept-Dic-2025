@model Actividad3LengProg3.Models.EstudianteViewModel
@{
    ViewData["Title"] = "Administración de estudiantes";
}

<div class="container mt-4">
    <div class="card shadow p-4">
        <h3 class="mb-3">@ViewData["Title"]</h3>
        <form asp-action="Registrar" method="post" class="row g-3">

            <div class="col-md-6">
                <label asp-for="NombreCompleto" class="form-label"></label>
                <input asp-for="NombreCompleto" class="form-control" />
                <span asp-validation-for="NombreCompleto" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Matrícula" class="form-label"></label>
                <input asp-for="Matrícula" class="form-control" />
                <span asp-validation-for="Matrícula" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Carrera" class="form-label"></label>
                <select asp-for="Carrera" class="form-select">
                    <option value="">Seleccione...</option>
                    <option>Educación - Orientación Escolar</option>
                    <option>Educación Primaria 1er Ciclo</option>
                    <option>Educación Primaria 2do Ciclo</option>
                    <option>Educación - Administración</option>
                    <option>Lengua Española y Literatura</option>
                    <option>Ciencias de la Comunicación</option>
                    <option>Administración Turística</option>
                    <option>Administración de Empresas</option>
                    <option>Ingeniería Agronómica</option>
                    <option>Ingeniería de Software</option>
                    <option>Ingeniería Eléctrica</option>
                    <option>Ingeniería Industrial</option>
                    <option>Odontología</option>
                    <option>Contabilidad</option>
                    <option>Enfermería</option>
                    <option>Derecho</option>
                </select>
                <span asp-validation-for="Carrera" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Campus" class="form-label"></label>
                <select asp-for="Campus" class="form-select">
                    <option value="">Seleccione...</option>
                    <option>Recinto Norte</option>
                    <option>Recinto Sur</option>
                </select>
                <span asp-validation-for="Campus" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Correo" class="form-label"></label>
                <input asp-for="Correo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Celular" class="form-label"></label>
                <input asp-for="Celular" class="form-control" />
            </div>

            <div class="col-md-6">
                <label asp-for="Teléfono" class="form-label"></label>
                <input asp-for="Teléfono" class="form-control" />
            </div>

            <div class="col-md-6">
                <label asp-for="Dirección" class="form-label"></label>
                <input asp-for="Dirección" class="form-control" />
            </div>

            <div class="col-md-6">
                <label asp-for="FechaNacimiento" class="form-label"></label>
                <input asp-for="FechaNacimiento" type="date" class="form-control" />
            </div>

            <div class="col-md-6">
                <label asp-for="Género" class="form-label"></label>
                <select asp-for="Género" class="form-select">
                    <option value="">Seleccione...</option>
                    <option>Masculino</option>
                    <option>Femenino</option>
                </select>
            </div>

            <div class="col-md-6">
                <label asp-for="Tanda" class="form-label"></label>
                <select asp-for="Tanda" class="form-select">
                    <option value="">Seleccione...</option>
                    <option>Matutina</option>
                    <option>Verpestina</option>
                    <option>Nocturna</option>
                </select>
            </div>

            <div class="col-md-6">
                <div class="form-check">
                    <input asp-for="EstaBecado" class="form-check-input" type="checkbox" id="chkBeca" />
                    <label asp-for="EstaBecado" class="form-check-label"></label>
                </div>
                <div id="becaField" style="display:none;">
                    <label asp-for="PorcentajeBeca" class="form-label"></label>
                    <input asp-for="PorcentajeBeca" class="form-control" type="number" min="0" max="100" />
                </div>
            </div>

            <div class="col-12 d-flex justify-content-end">
                <button type="submit" class="btn btn-primary me-2">Registrar</button>
                <a asp-action="ListaDeEstudiante" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById("chkBeca").addEventListener("change", function () {
            document.getElementById("becaField").style.display = this.checked ? "block" : "none";
        });
    </script>
}

