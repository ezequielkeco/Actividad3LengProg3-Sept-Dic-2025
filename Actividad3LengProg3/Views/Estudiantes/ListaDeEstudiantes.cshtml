@model IEnumerable<Actividad3LengProg3.Models.EstudianteViewModel>
@{
    ViewData["Title"] = "Lista de Estudiantes";
}

<div class="container mt-4">
    <div class="card shadow p-4">
        <div class="d-flex justify-content-between mb-3">
            <h3>@ViewData["Title"]</h3>
            <a asp-action="Index" class="btn btn-success">Registrar</a>
        </div>

        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>Nombre</th>
                    <th>Matrícula</th>
                    <th>Carrera</th>
                    <th>Campus</th>
                    <th>Tanda</th>
                    <th>Beca</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var e in Model)
                {
                    <tr>
                        <td>@e.NombreCompleto</td>
                        <td>@e.Matrícula</td>
                        <td>@e.Carrera</td>
                        <td>@e.Campus</td>
                        <td>@e.Correo</td>
                        <td>@e.Celular</td>
                        <td>@e.Género</td>
                        <td>@e.Tanda</td>
                        <td>
                            @(e.EstaBecado ? $"{e.PorcentajeBeca}%" : "No")
                        </td>
                        <td>
                            <a asp-action="Editar" asp-route-matricula="@e.Matrícula"
                               class="btn btn-warning btn-sm">Editar</a>
                            <a asp-action="Eliminar" asp-route-matricula="@e.Matrícula"
                               class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

