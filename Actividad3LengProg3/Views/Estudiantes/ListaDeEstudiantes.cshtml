@model List<EstudianteViewModel>
@{
    ViewData["Title"] = "Estudiantes Registrados";
}

<div class="container mt-4">
    <div class="card shadow p-4">
        <div class="d-flex justify-content-between mb-3">
            <h3>@ViewData["Title"]</h3>
            <a asp-action="Index" class="btn btn-success">Nuevo registro</a>
        </div>

        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>Nombre</th>
                    <th>Matrícula</th>
                    <th>Carrera</th>
                    <th>Campus</th>
                    <th>Tanda</th>
                    <th>Beca</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (EstudianteViewModel it in Model)
                {
                    <tr>
                        <td>@it.NombreCompleto</td>
                        <td>@it.Matrícula</td>
                        <td>@it.Carrera</td>
                        <td>@it.Campus</td>
                        <td>@it.Tanda</td>
                        <td>
                            @(it.EstaBecado ? $"{it.PorcentajeBeca}%" : "No")
                        </td>
                        <td>
                            <a href="/Estudiantes/Editar/@it.Matrícula" class="btn btn-warning">Editar</a>
                            <a asp-action="Eliminar" asp-route-matrícula="@it.Matrícula"
                               class="btn btn-danger"
                               onclick="return confirm('¿Estás seguro de eliminar a @it.Matrícula?');">
                                Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
