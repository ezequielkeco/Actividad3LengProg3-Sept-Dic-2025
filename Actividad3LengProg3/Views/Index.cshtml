@model Actividad3LengProg3.Models.EstudianteViewModel
@{
    ViewData["Title"] = "Registro de Estudiante";
}

<div class="container mt-4">
    <div class="card shadow p-4">
        <h3 class="mb-3">@ViewData["Title"]</h3>
        <form asp-action="Registrar" method="post" class="row g-3">

            <div class="col-md-6">
                <label asp-for="NombreCompleto" class="form-label"></label>
                <input asp-for="NombreCompleto" class="form-control" />
                <span asp-validation-for="NombreCompleto" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Matricula" class="form-label"></label>
                <input asp-for="Matricula" class="form-control" />
                <span asp-validation-for="Matricula" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Carrera" class="form-label"></label>
                <select asp-for="Carrera" class="form-select">
                    <option value="">Seleccione...</option>
                    <option>Ingeniería de Sistemas</option>
                    <option>Medicina</option>
                    <option>Arquitectura</option>
                </select>
                <span asp-validation-for="Carrera" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Recinto" class="form-label"></label>
                <select asp-for="Recinto" class="form-select">
                    <option value="">Seleccione...</option>
                    <option>Recinto Norte</option>
                    <option>Recinto Sur</option>
                </select>
                <span asp-validation-for="Recinto" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Correo" class="form-label"></label>
                <input asp-for="Correo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Celular" class="form-label"></label>
                <input asp-for="Celular" class="form-control" />
            </div>

            <div class="col-md-6">
                <label asp-for="Telefono" class="form-label"></label>
                <input asp-for="Telefono" class="form-control" />
            </div>

            <div class="col-md-6">
                <label asp-for="Direccion" class="form-label"></label>
                <input asp-for="Direccion" class="form-control" />
            </div>

            <div class="col-md-6">
                <label asp-for="FechaNacimiento" class="form-label"></label>
                <input asp-for="FechaNacimiento" type="date" class="form-control" />
            </div>

            <div class="col-md-6">
                <label asp-for="Genero" class="form-label"></label>
                <select asp-for="Genero" class="form-select">
                    <option value="">Seleccione...</option>
                    <option>Masculino</option>
                    <option>Femenino</option>
                </select>
            </div>

            <div class="col-md-6">
                <label asp-for="Turno" class="form-label"></label>
                <select asp-for="Turno" class="form-select">
                    <option value="">Seleccione...</option>
                    <option>Mañana</option>
                    <option>Tarde</option>
                    <option>Noche</option>
                </select>
            </div>

            <div class="col-md-6">
                <div class="form-check">
                    <input asp-for="EstaBecado" class="form-check-input" type="checkbox" id="chkBeca" />
                    <label asp-for="EstaBecado" class="form-check-label"></label>
                </div>
                <div id="becaField" style="display:none;">
                    <label asp-for="PorcentajeBeca" class="form-label"></label>
                    <input asp-for="PorcentajeBeca" class="form-control" type="number" min="0" max="100" />
                </div>
            </div>

            <div class="col-12 d-flex justify-content-end">
                <button type="submit" class="btn btn-primary me-2">Registrar</button>
                <a asp-action="Lista" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById("chkBeca").addEventListener("change", function () {
            document.getElementById("becaField").style.display = this.checked ? "block" : "none";
        });
    </script>
}

