@model Actividad3LengProg3.Models.EstudianteViewModel
@{
    ViewData["Title"] = "Editar Estudiante";
}

<div class="container mt-4">
    <div class="card shadow p-4">
        <h3 class="mb-3">@ViewData["Title"]</h3>
        <form asp-action="Editar" method="post" class="row g-3">

            <div class="col-md-6">
                <label asp-for="NombreCompleto" class="form-label"></label>
                <input asp-for="NombreCompleto" class="form-control" />
                <span asp-validation-for="NombreCompleto" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Matrícula" class="form-label"></label>
                <input asp-for="Matrícula" class="form-control" readonly />
                <span asp-validation-for="Matrícula" class="text-danger"></span>
            </div>

            <div class="col-12 d-flex justify-content-end">
                <button type="submit" class="btn btn-success me-2">Guardar cambios</button>
                <a asp-action="ListaDeEstudiantes" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>
